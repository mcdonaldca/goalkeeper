 $green: #8AB839;
 $red: #F7464A;
 $grey-blue: #434F5B;
 $light-grey: #F2F2F2;
 $dark-grey: #2E2E2E;
 $abel-stack: Abel, Tahama, sans-serif;
 $rokkitt-stack: Rokkitt, sans-serif;

.people {
	input[type="checkbox"] {
		display: none;
	}
}

.person {
	position: relative;
	padding: 15px 0 10px 15px;

	.friend-profile {
		display: inline-block;
		width: 50px;
		height: 50px;
		border-radius: 50%;
	}

	p {
		display: inline-block;
		position: relative;
		width: auto;
		top: -17px;
		left: 12px;
		font: 22px "Raleway", sans-serif;
		font-weight: 400;
	}

}

.person.selected {
	background: #E7EBEE;
	.friend-profile {
		background: url(<%= asset_path 'checked.png' %>) !important;
	}
}

.goals li {
	list-style: none;
	margin: 2em 0 2em 0;
	font: 1em $rokkitt-stack;

	.action {
		width: 100%;
		text-align: center;
		font: 2em $rokkitt-stack;
		margin-bottom: .5em;

		i {
			display: inline-block;
			font-style: normal;
			border-bottom: 1px $dark-grey dotted;
			padding: 0 10px;
		}
	}

	.success, .failure {
		display: inline-block;
		width: 19%;
		padding: 10px 0;
		margin: 5px 3%;
		text-align: center;
		-webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
		a {
			color: white;
			text-decoration: none;
		}	
	}

	.success {
		background: $green;
	}

	.failure {
		background: $red;
	}

	.progress {
		display: inline-block;
		background: $grey-blue;
		text-align: center;
		-webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
		width: 44%;
		padding: 10px 0;
		margin: 5px 3%;
		a {
			color: white;
			text-decoration: none;
		}	
	}
}

h1 i {
	display: inline-block;
	font-style: normal;
	border-bottom: 1px $dark-grey dotted;
	padding: 0 10px;
}

.percent-success {
	display: inline-block;
	width: 30%;
	margin: 1em 5%;
	padding: 0 0 0 10%;
}

.amount-spent {
	float: right;
	width: 40%;
	margin: 1em 5%;
	text-align: center;
	.amount {
		font: 4.5em $abel-stack;
		color: $grey-blue;
	}
}

.caption {
	display: inline-block;
	width: 50%;
	text-align: center;
	margin: 0;
	padding: 0;
	font: 1.2em $rokkitt-stack;
	color: $grey-blue;
}

.progress-bar {
	margin: 3em 0 1.5em 0;
	display: block;
	background: darken(#F2F2F2, 20%);
	width: 100%;
	height: 4em;

	.progress {
		padding: 0;
		margin: 0;
		width: 70%;
		height: 100%;
		background: #FFC870;
	}
}

.caption-full {
	width: 100%;
	text-align: center;
	font: 1.2em $rokkitt-stack;
	color: $grey-blue;
}

.dur-buttons {
	width: 90%;
	margin: 0 5%;
	font: 1.3em $rokkitt-stack;

	input[type="radio"] {
		margin: 1em 0;
	}
}

.freq-buttons {
	width: 90%;
	margin: 0 5% 1em 5%;
	font: 1.3em $rokkitt-stack;
	text-align: center;

	input[type="checkbox"] {
		margin-left: 1em;
	}
}

.progress-table {
	width: 90%;
	margin: 1em 5%;
	text-align: center;
	font: 1.2em $rokkitt-stack;
}

table.progress-table tr {
	padding-bottom: 1em;
}
