 $green: #8AB839;
 $grey-blue: #434F5B;
 $light-grey: #F2F2F2;
 $dark-grey: #2E2E2E;
 $abel-stack: Abel, Tahama, sans-serif;
 $rokkitt-stack: Rokkitt, sans-serif;

.people {
	input[type="checkbox"] {
		display: none;
	}
}

.person,
.verify {
	position: relative;
	padding: 15px 0 10px 15px;

	.friend-profile {
		display: inline-block;
		width: 50px;
		height: 50px;
		border-radius: 50%;
	}

	p {
		position: relative;
		top: -17px;
		left: 12px;
		display: inline-block;
		font: 22px "Raleway", sans-serif;
		font-weight: 400;
	}

	.owe {
		float: right;
		margin: 20px 40px 0 0;
	}

}

.person.selected {
	background: #E7EBEE;
	.friend-profile {
		background: url(<%= asset_path 'checked.png' %>) !important;
	}
}

.goals li {
	list-style: none;
	margin: .5em 0 .5em 0;

	.action {
		width: 100%;
		text-align: center;
		font: 2em $rokkitt-stack;

		i {
			display: inline-block;
			font-style: normal;
			border-bottom: 1px $dark-grey dotted;
			padding: 0 10px;
		}
	}

	.success, .failure {
		display: inline-block;
		width: 19%;
		padding: 5px 3%;
	}

	.progress {
		display: inline-block;
		width: 44%;
		padding: 5px 3%;
	}
}



