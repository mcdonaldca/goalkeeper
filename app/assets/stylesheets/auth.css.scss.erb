$rokkitt-stack: Rokkitt, sans-serif;
$grey-blue: #434F5B;

.new-user {
	width: 100%;
	text-align: center;
	padding-top: 1em;

	a {
		font: 1.25em $rokkitt-stack;
		color: $grey-blue;
		text-decoration: none;
	}
}

.login {
	margin-top: 1em;

	input[type="text"] {
		background-image: url(<%= asset_path 'email.png' %>);
	}

	input[type="password"] {
		background-image: url(<%= asset_path 'password.png' %>);
	}
}

.sign-up {
	margin-top: 1em;

	input.email {
		background-image: url(<%= asset_path 'email.png' %>);
	}

	input.password {
		background-image: url(<%= asset_path 'password.png' %>);
	}

	input.name {
		background-image: url(<%= asset_path 'person.png' %>);
	}

	select {
		font: 2em $rokkitt-stack;
	}

	label {
		display: inline-block;
		color: #999;
		font: 2em $rokkitt-stack;
		margin: .25em .1em .25em 7%;
	}
}

input[type="text"], input[type="password"] {
	background: white;
	border: 1px #ccc solid;
	width: 80%;
	height: 2em;
	margin: .5em 5%;
	padding-left: 10%;
	font-size: 1.5em;

	background-position: 12px 10px;
	background-size: 25px 25px;
	background-repeat: no-repeat;
}

.venmo-logo {
	width: 40%;
	margin: 1.5em 30% 1em 30%;

	img {
		width: 100%;
	}
}