<h2> New user </h2>

<%= form_for @user do |f| %>
 <% if @user.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <%= f.label :email, "Email" %> <%= f.text_field :email %><br />
  <%= f.label :first, "First Name" %> <%= f.text_field :first %><br />
  <%= f.label :last, "Last Name" %> <%= f.text_field :last %><br />
  <%= f.label :birthday, "Birthday" %> <%= f.date_select :birthday, :start_year => 1970, :end_year => Time.now.year %><br />
  <%= f.label :gender, "Gender" %> <%= f.select :gender, [["Male", "male"], ["Female", "female"], ["Other", "other"]] %><br />
  <%= f.label :password, "Password" %> <%= f.password_field :password %> <br />
  Confirm: <%= f.password_field :password_confirmation %>  <br />
  <%= f.submit %>
<% end %>
<hr />
<%= link_to "Cancel", index_url %>