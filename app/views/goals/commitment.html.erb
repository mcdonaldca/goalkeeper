<h1>commitment</h1>

<%= form_tag action: "action" do %>
<p>How long is your goal?</p>
  <div class="dur-buttons">
  <%= radio_button_tag :duration, "1", true, id: "dur-one" %>
	<%= label_tag :duration_one, "One Month" %><br>
	<%= radio_button_tag :duration, "3", false, id: "dur-three" %>
	<%= label_tag :duration_three, "Three Months" %><br>
	<%= radio_button_tag :duration, "6", false, id: "dur-six" %>
	<%= label_tag :duration_six, "Six Months" %><br></div>
	<div></div><br>
	<p>Which days of the week?</p>
	<div class="freq-buttons">
		<%= check_box_tag(:SUN) %>
		<%= label_tag(:SUN, "Su") %>
		<%= check_box_tag(:MON) %>
		<%= label_tag(:MON, "M") %>
		<%= check_box_tag(:TUE) %>
		<%= label_tag(:TUE, "Tu") %>
		<%= check_box_tag(:WED) %>
		<%= label_tag(:WED, "W") %>
		<%= check_box_tag(:THU) %>
		<%= label_tag(:THU, "Th") %>
		<%= check_box_tag(:FRI) %>
		<%= label_tag(:FRI, "F") %>
		<%= check_box_tag(:SAT) %>
		<%= label_tag(:SAT, "Sa") %>
	</div>
	<%= hidden_field_tag(:id, @goal.id) %>
  <%= submit_tag "Let's Do It", class: "button submit" %>
<% end %>
<div class="new-user"><%= link_to "Cancel", goals_url %></div>

<script type="text/javascript">
  $("#dur-one").click( function() {
  	$("dur").innerHTML("one month");
  });
  $("#dur-three").click( function() {
  	$("dur").innerHTML("three months");
  });
  $("#dur-six").click( function() {
  	$("dur").innerHTML("six months");
  });
</script>